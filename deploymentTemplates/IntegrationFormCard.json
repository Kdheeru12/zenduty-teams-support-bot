{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
      {
        "type": "TextBlock",
        "size": "medium",
        "weight": "bolder",
        "text": "Zenduty",
        "horizontalAlignment": "center",
        "wrap": true,
        "style": "heading"
      },
      {
        "type": "Input.Text",
        "label": "Service Name",
        "style": "text",
        "id": "name",
        "isRequired": true,
        "errorMessage": "service name is required"
      },
      {
        "type": "Input.Text",
        "label": "Integration Name",
        "style": "text",
        "id": "integrationName",
        "isRequired": true,
        "errorMessage": "integration name is required"
      },
      {
        "type": "Input.Text",
        "label": "Zenduty Integration Key",
        "style": "text",
        "id": "apiKey",
        "isRequired": true,
        "errorMessage": "integration key is required"
        
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Submit",
        "data": {
          "integration":true
        }
      }
    ]
  }
  