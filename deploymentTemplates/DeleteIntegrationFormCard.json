{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.5",
    "body": [
        {
            "type": "Input.ChoiceSet",
            "id": "integration",
            "label": "Select Integration",
            "value": "${Integrations[0].key}",
            "choices": [
                {
                    "$data": "${Integrations}",
                    "title": "${name}",
                    "value": "${name}"
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Submit",
            "data": {
                "delete_integration": true
            }
        }
    ]
  }